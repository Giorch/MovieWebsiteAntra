@model ApplicationCore.Models.CastDetailsModel

<div class="containcolor" >

  <div class="row">
    <div class="col">
      <h1>@Model.Name</h1>
      
      <img src="@Model.ProfilePath" width="200" />
    </div>
        

  </div>
  <div class="row">
      <h2><b>Featured Movies</b></h2>
        @foreach(var movie in Model.MoviesOfCast)
        {
                <div style="width:100px">
                
                <partial name="_MovieCardPartial" model="movie"/> 
                
                </div>
        }
  </div>
</div>