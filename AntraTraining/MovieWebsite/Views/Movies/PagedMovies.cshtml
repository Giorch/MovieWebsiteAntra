@model ApplicationCore.Models.PagedResult<ApplicationCore.Models.MovieCardModel>
<div class="rounded">
    <div class="container-fluid">
        <div class="row">
    @foreach(var movie in Model.Data)
    {
        <div class="col-6 col-lg-3 col-sm-4 col-xl-2" >
        <partial name="_MovieCardPartial" model="movie"/>
        </div>
    }
        </div>
    </div>
</div>
    <nav aria-label="Page navigation example">

            <ul class="pagination">

            @for(int i = 1; i <= Model.TotalPages; i++)
            {
                    <li class="page-item"><a class="page-link" asp-controller="Movies" asp-action="Genres" asp-route-pageNumber="@i">@i</a></li>
            }
            </ul>

    </nav>