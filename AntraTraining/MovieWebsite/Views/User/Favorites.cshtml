@model List<ApplicationCore.Models.MovieCardModel>

@if(Model == null)
{
    <div class="mx-auto" width="200px">You don't have any favorite movies</div>
}
else
{
       @foreach(var movie in Model)
        {
                <div style="width:100px">
                
                <partial name="_MovieCardPartial" model="movie"/> 
                
                </div>
        }
}